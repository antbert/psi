template(name="loginForm")
  section.wrapper
    .overlay
      .land-container
        .logo
          img(class="logo__item", src="../images/logo.svg", alt="")
        .login-container
          .form-container
            form(class="form", action="")
              .auth-form-body
                input(class="input-block login-field", type="text", placeholder="EMAIL")
                input(class="input-block password-field", type="password", placeholder="PASSWORD")
                .help-btns-wrapper
                  a(href="#", class="forgot-pass") #{text.forgotPass}
                  .social-btns
                    a(href="#")
                      i.facebook-ico
                    a(href="#")
                      i.google-ico
          .btn-container
            a.login-button #{text.login}