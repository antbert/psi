template(name="loginForm")
  section.wrapper
    .overlay
      .land-container
        .logo
          img(class="logo__item", src="../images/logo.svg", alt="")
        .login-container
          .form-container
            form(class="form")
              .auth-form-body
                p
                  input(name="username", class="input-block login-field", type="text", placeholder="USERNAME")
                  span.error-message Wrong username!
                p
                  input(name="password", class="input-block password-field", type="password", placeholder="PASSWORD")
                  span.error-message Oops, wrong password!
                .help-btns-wrapper
                  a(href="#", class="forgot-pass") #{text.forgotPass}
                  .social-btns
                    a(href="#")
                      i.facebook-ico
                    a(href="#")
                      i.google-ico
                button(type='submit').login-button #{text.login}
                p.dha Don't have an account? -
                  a(href='/register') Sign up
                          
