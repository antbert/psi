template(name="userRegisterForm")
  section.wrapper
    .overlay
      .land-container
        .logo
          img(class="logo__item", src="../images/logo.svg", alt="")
        .login-container
          .form-container
            form(class="form", action="")
              .auth-form-body
                p
                  input(class="input-block login-field", type="text", placeholder="USERNAME")
                  span.error-message Wrong username!
                p
                  input(class="input-block email-field", type="text", placeholder="EMAIL")
                  span.error-message Incorrect email!
                p
                  input(class="input-block password-field", type="password", placeholder="PASSWORD")
                  span.error-message Oops, wrong password!
                .help-btns-wrapper
                  a(href="#", class="register-with") #{text.registerWith}
                  .social-btns
                    a(href="#")
                      i.facebook-ico
                    a(href="#")
                      i.google-ico
                a.register-button #{text.register}
                p.dha Have an account? -
                  a(href='#') Sign in
